<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutCrearArticulo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearArticuloFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backgroundColor" />

            <LinearLayout
                android:id="@+id/linearLayoutCategorySet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvArticuloCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_crear_articulo_chooseCategory" />

                <Spinner
                    android:id="@+id/spArticuloCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backgroundColor" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/fragment_crear_articulo_etArticuloTitle_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etArticuloTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|text"
                    android:maxLength="45" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backgroundColor" />

            <LinearLayout
                android:id="@+id/linearLayoutAreaSet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pais" />

                    <Spinner
                        android:id="@+id/spSelectPais"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Departamento" />

                    <Spinner
                        android:id="@+id/spSelectDepartamento"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Municipio" />

                    <Spinner
                        android:id="@+id/spSelectMunicipio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCrearArticuloPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvCrearArticuloRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backgroundColor" />

            <LinearLayout
                android:id="@+id/linearlayoutImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivArticuloImage1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="@dimen/nav_header_vertical_spacing"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_image_black_72dp" />

                    <ImageView
                        android:id="@+id/ivArticuloImage2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="@dimen/nav_header_vertical_spacing"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_image_black_72dp" />

                    <ImageView
                        android:id="@+id/ivArticuloImage3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="@dimen/nav_header_vertical_spacing"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_image_black_72dp" />
                </TableRow>
            </TableLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backgroundColor" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etArticuloPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio(Q)"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etArticuloDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fragment_crear_articulo_etArticuloDescription_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/backgroundColor" />

            <CheckBox
                android:id="@+id/checkBoxShareFB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartir en Facebook" />

            <CheckBox
                android:id="@+id/checkBoxShareTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartir en Twitter" />

            <View
                android:id="@+id/divider99"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/backgroundColor" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCrearArticulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_crear_artivulo_btnCrearArticulo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnCrearArticuloLaunchMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_crear_articulo_btnCrearArticuloLaunchMap" />

                <FrameLayout
                    android:id="@+id/frameLayoutGoogleMaps"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:visibility="gone">

                </FrameLayout>

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="座標X,Yから500メートル。"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:id="@+id/divider81"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backgroundColor" />

            <FrameLayout
                android:id="@+id/frameLayoutCrearMap"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:visibility="gone">

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>